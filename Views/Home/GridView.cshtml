@model UmbaniApiTest.ViewModels.IndexMeasurementViewModel

@{
    ViewData["Title"] = "GridView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Measurements</h1>

<section class="text-center">
    <div style="padding:20px">
        <h5>Temperature Sum: </h5>
        @ViewBag.TemperatureSum
        <h5>Temperature Average: </h5>
        @ViewBag.TemperatureAverage
        <h5>Temperature Min: </h5>
        @ViewBag.TemperatureMin
        <h5>Temperature Max: </h5>
        @ViewBag.TemperatureMax
        <h5>Temperature Variance: </h5>
        @ViewBag.TemperatureVariance
        <h5>Temperature StandardDeviation: </h5>
        @ViewBag.TemperatureStdv
    </div>
    <form method="post" role="form">
        <ul>
            @foreach (var measurement in Model.Items)
            {
                <li style="list-style-type: none" id="@measurement.MeasurementId"><section style="display:inline-block; padding: 10px"> <section>Temperature @measurement.Temperature</section>   <section>Humidity @measurement.Humidity</section>  <section>Weight  @measurement.Weight</section>  <section>Lenght  @measurement.Lenght</section> <section>Width  @measurement.Width</section>  <section>Depth  @measurement.Depth</section></section><button asp-action="AddMeasurement" asp-controller="Home">Update</button><button asp-action="AddMeasurement" asp-controller="Home">Delete</button></li>
            }
        </ul>
        <button asp-action="AddMeasurement" asp-controller="Home">
            Add Measurement
        </button>
    </form>
</section>
